{

  "manifest_version": 2,
  "name": "Just Save",
  "version": "0.0.1",
 
  "description": "A simple WebExtension for skipping the \"Save As\" dialog when saving pages and images ",
  "icons": {
    "48": "icons/just-save.svg"
  },

  "applications": {
    "gecko": {
      "id": "just-save@lewisl.webextension",
      "strict_min_version": "45.0"
    }
  },
  
  "background": {
    "scripts": ["just-save.js"]
  },
  
  "permissions": ["contextMenus", "downloads"]

}